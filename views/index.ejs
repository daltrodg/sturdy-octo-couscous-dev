        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item fluid">
            <a class="nav-link active" aria-current="page" href="#">Home</a>
          </li>

          <li class="nav-item">
            <a class="nav-link" target="repo" href="https://github.com/daltrodg/sturdy-octo-couscous-dev">
              &lt;Source Code <i class="bi bi-github"></i>&gt;</a>
          </li>

          </li>
        </ul>
      </div>
    </div>
  </nav>

  <main class="m-2 p-2 row">
    <div class="col-lg-8 offset-lg-2">
      <h2>Cool Songs</h2>
      <div class="mb-3">

        <button id="btnAddSong" class="btn btn-primary" data-bs-toggle="modal"
          data-bs-target="#addSongModal">Add song</button>

        <button id="btnShowAll" class="btn btn-info btn-sm">Show All</button>
        <button id="btnHideAll" class="btn btn-info btn-sm">Hide All</button>

      </div>

      <!-- Modal -->
      <div id="addSongModal" class="modal fade" tabindex="-1" aria-labelledby="addSongModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <form action="/insert" method="POST">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add New Song</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <ul class="list-group">

                  <li class="input-group w-100">
                    <span class="w-20 input-group-text">Song Name</span>
                    <input id="songAddName" name="songName" type="text" class="form-control" placeholder="song name">
                  </li>

                  <li class="input-group w-100">
                    <span class="w-20 input-group-text">Artist</span>
                    <input id="songAddArtist" name="songArtist" type="text" class="form-control" placeholder="artist">
                  </li>
                  <li class="input-group w-100">
                    <span class="w-20 input-group-text">Link</span>
                    <input id="songAddLinks" name="songLink" type="text" class="form-control"
                      placeholder="Link to Song">
                  </li>
                </ul>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button id="btnSaveSong" type="submit" class="btn btn-primary">Save Song</button>
              </div>
            </form>
          </div>
        </div>
      </div>


      <ul id="songList" class="list-group">
        <% songResults.forEach(song=> { %>
          <li id="<%=song._id%>" class="list-group-item mb-1 songName">
            <%=song.songName%>

              <ul class="list-group songDetails">
                <li class="input-group w-100">
                  <span class="w-20 input-group-text">artist</span>

                  <form action="/update/<%=song._id%>" method="POST">
                    <input name="artist" type="text" class="form-control editSong" value="<%=song.songArtist%>">
                    <button id="btnUpdateSong" type="submit" class="btn btn-secondary">Update Artist</button>
                  </form>
                </li>
                <li class="input-group w-100">
                  <span class="w-20 input-group-text">Links</span>


                  <a href="<%=song.songLink%>">
                    <%=song.songLink%>
                  </a>

                </li>
                <br>





                <form action="/delete/<%=song._id%>" method="POST">
                  <button id="btnDeleteSong" type="submit" class="btn btn-danger">Delete Song</button>
                </form>
              </ul>
          </li>
          <% }); %>
      </ul>
    </div>
  </main>

  <footer class="footer bg-bg-tertiary text-center text-lg-start fixed-bottom">


